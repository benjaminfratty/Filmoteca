{% extends 'base.html.twig' %}

{% block title %}Détails du film{% endblock %}

{% block content %}
    <h2 class="mb-4">
        <i class="fas fa-film" aria-hidden="true"></i> Détails du film
    </h2>

    {% if film is not defined %}
        <p class="alert alert-warning">Film introuvable.</p>
    {% else %}
        <div class="card">
            <div class="card-header">
                <h3>{{ film.title }}</h3>
            </div>
            <div class="card-body">
                <p><strong>Année :</strong> {{ film.year }}</p>
                <p><strong>Type :</strong> {{ film.type }}</p>
                <p><strong>Réalisateur :</strong> {{ film.director }}</p>
                <p><strong>Synopsis :</strong></p>
                <p>{{ film.synopsis }}</p>
            </div>
            <div class="card-footer text-muted">
                <p><strong>Ajouté le :</strong> {{ film.createdAt.format('d/m/Y H:i') }}</p>
                <p><strong>Modifié le :</strong> {{ film.updatedAt.format('d/m/Y H:i') }}</p>
            </div>
        </div>
    {% endif %}

    <a href="/films" class="btn btn-primary mt-4">
        <i class="fas fa-arrow-left"></i> Retour à la liste des films
    </a>
{% endblock %}
